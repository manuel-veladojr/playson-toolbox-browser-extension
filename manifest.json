{
  "manifest_version": 3,
  "name": "O1 Pro Auth Extension",
  "version": "1.0",
  "description": "A browser extension with login and registration.",
  "permissions": ["storage", "identity"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
